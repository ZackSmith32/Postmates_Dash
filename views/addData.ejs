<!DOCTYPE html>
<html>
  <head>
    <title> data </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='//netdna.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css'>
    <link href="http://code.jquery.com/ui/1.10.4/themes/ui-lightness/jquery-ui.css" rel="stylesheet">
    <script src='https://code.jquery.com/jquery-2.1.3.min.js'></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
  </head>

  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <% include templates/header.ejs %>
    <br>
    <br>
    <br>

    <h3>Shift Number <%= shiftNumber %></h3>

    <div id='addedJobs'>
      <table>
        <tbody>
          <tr>
            <th>Date</th>         
            <th>Merchant</th>
            <th>Payout</th>
            <th>Tip</th>
            <th>Start</th>
            <th>End</th>
            <th>Delete</th>
          </tr>
        </tbody>
      </table>
    </div>

    <form action='/addData' method='post'>
      <input hidden type='number' name='shiftNumber' value=<%= shiftNumber %>  >
      <div>
        <input type='submit' value='New Shift'>
      </div>
    </form>
  
    <form action='/addData' method='post'>
  
      <input hidden type='number' name='shiftNumber' value=<%= shiftNumber %>>

      <!--<div class='shiftData'>
        <h3>Total miles driven</h3>
        <input type='number' name='shiftMiles' class='shiftData' min='1'><br>
      </div> -->

      <div>
        <input type='checkbox' id='jobTest' name='jobTest'><span>Test?</span><br>
      </div>

      <div class='jobData ui-widget'> 
        <label for='autocomplete-1'>Merchant</label>
        <input type='text' name='jobMerchant' class='job' id='autocomplete-1'>
      </div>

      <div class='jobData'>
        <h3>Payout</h3>
        <input type='number' name='jobPayout' id='jobPayout' class='job' step='0.01'>
      </div>

      <div class='jobData'>
        <h3>tip</h3>
        <input type='checkbox' id='pending' name='jobTipPending'><span>Pending?</span><br>
        <input type='number' id='jobTip' name='jobTip' class='job' step='0.01'>
      </div>

      <div class='jobData'>
        <h3>Multiplier</h3>
        <input type='number' name='jobMultiplier' id='jobMultiplier' class='job' step='0.01'>
      </div>


      <div class='jobData'>
        <h3>Start time</h3>
        <input type='datetime-local' name='jobStart' class='job'>
      </div>

      <div class='jobData'>
        <h3>End time</h3>
        <input type='datetime-local' name='jobEnd' class='job'>
      </div>

      <div class='jobData'>
        <input type='checkbox' id='jobCancele' name='jobCancele'><span>Canceled?</span><br>
      </div>

      <div class='jobData'>
        <h3>Promotion</h3>
        <input type='radio' name='jobPromotion' value='true' class='job' required>Yes
        <input type='radio' name='jobPromotion' value='false' class='job' required>No
      </div>

      <div class='jobData'>
        <input type='submit' id='jobSubmit'>
      </div>

      
    </form>

    
    <script src='/modules/moment.min.js'></script>
    <script src='/javascripts/main.js'></script>
    <script type='text/javascript'>
      var jobData = <%- JSON.stringify(jobData) %>
    </script> 
    

  </body>
</html>